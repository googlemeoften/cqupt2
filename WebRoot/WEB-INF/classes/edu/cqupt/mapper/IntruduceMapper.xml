<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper  
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.cqupt.mapper.IntroduceMapper">
	<select id="findIntroduce" resultType="Introduce">
		select * from introduce
	</select>

	<insert id="addIntroduce" parameterType="Introduce">
		insert into introduce (introduce_path)value(#{introduce_path})
	</insert>
	
	<update id="updateIntroduce" parameterType="Introduce">
		update introduce set introduce_path=#{introduce_path} 
		where introduce_id=#{introduce_id}
	</update>
</mapper> 